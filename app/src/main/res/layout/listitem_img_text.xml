<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android = "http://schemas.android.com/apk/res/android"
              android:orientation = "horizontal"
              android:layout_width = "match_parent"
              android:layout_height = "@dimen/list_item_height"
              android:gravity="center_vertical"
              android:padding="@dimen/list_item_margin_gap"
              android:background = "#bf2234ff" >
	<ImageView android:id="@+id/ivProfile"
			android:layout_width = "@dimen/profile_pic_width"
			android:layout_height = "@dimen/profile_pic_height"
			android:layout_marginRight="@dimen/list_item_margin_gap"
			android:contentDescription="Profile"
			android:src="@drawable/ic_launcher"/>
	<TextView android:id="@+id/tvDescription"
			android:layout_width = "wrap_content"
			android:layout_height = "wrap_content"
			android:textColor="@android:color/white"
			android:textSize="15sp"
			android:ellipsize="end"
			android:lineSpacingExtra="4dp"
			android:maxLines="2"/>
</LinearLayout >